command=~/.i3/i3blocks_scripts/$BLOCK_NAME
separator_block_width=15

[title]
command=xtitle -s
interval=persist
color=#ddddbb

[volume]
label=♪
instance=Master
interval=once
signal=1

[temp]
label=
command=sensors coretemp-isa-0000 | awk '/Physical/ { print $4  }'
interval=10

[memory]
label=MEM
interval=30




[time]
command=date +"%Y-%m-%d %a, %R"
interval=60
