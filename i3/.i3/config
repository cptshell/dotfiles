set $mod Mod1

workspace 0 output $output1
workspace 1 output $output1
workspace 2 output $output2



# COLORS
set $gray #e89393
set $lightgray #dddddd
set $darkgray #2c2c2e
set $red #8C3939
set $darkred #220000
set $pink #e89393
set $black #040404
set $white #FFFFFF
set $transparent #000000FF
set $blue #83a598


# class                     border         backgr          text         indicator
client.focused              $red           $red            $lightgray   $darkred
client.unfocused            $darkgray      $darkgray       $gray
client.focused_inactive     $darkgray      $darkgray       $white
client.urgent               $gray          $gray           $black
client.placeholder          $gray          $pink           $black


# FONT
font xft:Inconsolata Bold 9


bindsym $mod+period move workspace to output left
bindsym $mod+comma move workspace to output right

# window's border
new_window pixel 4
new_float pixel 6


##MOUSE
focus_follows_mouse no
#mouse_warping output


# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# BIND KEYS
bindsym $mod+Return exec sakura

bindsym --release Shift+Insert exec --no-startup-id xsel > ~/.clp && xdotool type --delay 0 --clearmodifiers --file ~/.clp

bindsym $mod+s exec --no-startup-id ydpd_toggle
for_window [class="URxvt"] floating enable

bindsym $mod+Shift+r restart


bindsym $mod+Shift+s sticky toggle





# kill focused window
bindsym $mod+q kill

# start dmenu (a program launcher)
bindsym $mod+d exec dmenu_run 
# There also is the (new) i3-dmenu-desktop which only displays applications
# shipping a .desktop file. It is a wrapper around dmenu, so you need that
# installed.
# bindsym $mod+d exec --no-startup-id i3-dmenu-desktop

# change focus
bindsym $mod+h focus left; exec pkill -RTMIN+2 i3blocks 
bindsym $mod+j focus down; exec pkill -RTMIN+2 i3blocks
bindsym $mod+k focus up; exec pkill -RTMIN+2 i3blocks
bindsym $mod+l focus right; exec pkill -RTMIN+2 i3blocks


# alternatively, you can use the cursor keys:
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

bindsym $mod+F1 exec amixer -q set Master 2dB- unmute && pkill -RTMIN+1 i3blocks
bindsym $mod+F2 exec amixer -q set Master 2dB+ unmute && pkill -RTMIN+1 i3blocks
bindsym $mod+F3 exec amixer -q set Master toggle && pkill -RTMIN+1 i3blocks

# move focused window
bindsym $mod+Shift+h move left 140px
bindsym $mod+Shift+j move down 140px
bindsym $mod+Shift+k move up 140px
bindsym $mod+Shift+l move right 140px

# split in horizontal orientation
bindsym $mod+c split h

# split in vertical orientation
bindsym $mod+v split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent

# focus the child container
bindsym $mod+z focus child

# switch to workspace
bindsym $mod+grave workspace 0
bindsym $mod+1 workspace 1
bindsym $mod+2 workspace 2
bindsym $mod+3 workspace 3
bindsym $mod+4 workspace 4
bindsym $mod+5 workspace 5
bindsym $mod+6 workspace 6
bindsym $mod+7 workspace 7
bindsym $mod+8 workspace 8
bindsym $mod+9 workspace 9
bindsym $mod+0 workspace 10

# move focused container to workspace
bindsym $mod+Shift+grave move container to workspace 0
bindsym $mod+Shift+1 move container to workspace 1
bindsym $mod+Shift+2 move container to workspace 2
bindsym $mod+Shift+3 move container to workspace 3
bindsym $mod+Shift+4 move container to workspace 4
bindsym $mod+Shift+5 move container to workspace 5
bindsym $mod+Shift+6 move container to workspace 6
bindsym $mod+Shift+7 move container to workspace 7
bindsym $mod+Shift+8 move container to workspace 8
bindsym $mod+Shift+9 move container to workspace 9
bindsym $mod+Shift+0 move container to workspace 10


mode "resize" {


    bindsym l resize grow right 10 px or 10 ppt, resize shrink left 10 px or 10 ppt
        bindsym h resize shrink right 10 px or 10 ppt, resize grow left 10 px or 10 ppt

        bindsym j resize grow down 10 px or 10 ppt, resize shrink up 10 px or 10 ppt
        bindsym k resize grow up 10 px or 10 ppt, resize shrink down 10 px or 10 ppt

        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"



set $mode_system System [l]ock, [r]eboot, [s]shutdown


mode "$mode_system" {

    bindsym l exec --no-startup-id ~/.i3/autolock, mode "default"
    bindsym r exec --no-startup-id sudo shutdown -r now, mode "default"
    bindsym s exec --no-startup-id sudo shutdown -h now, mode "default"

    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+Shift+e mode "$mode_system"


# gaps
smart_borders on
smart_gaps on
gaps inner 10
gaps outer 0


# AUTOSTART

exec --no-startup-id feh --bg-scale ~/.wallpaper.jpg
exec --no-startup-id numlockx on


# BIND CAPSLOCK TO CTRL/ESC
exec_always --no-startup-id setxkbmap -option ctrl:nocaps
exec_always --no-startup-id xcape -e 'Control_L=Escape'

# LOCKER
exec --no-startup-id xautolock -time 10 -locker autolock -nowlocker autolock -detectsleep -corners 000+ -cornerdelay 3 &
# right first
bar {
    #i3bar position
    position top
    workspace_buttons yes
    status_command i3blocks -c ~/.i3/li3blocks

    font pango:Cousine, FontAwesome 8
    output $output1
    strip_workspace_numbers yes
    separator_symbol "|"



    colors {
        statusline         $white
        background         $transparent

#                          BORDER       BACKGROUND   TEXT
        focused_workspace  $transparent $transparent $red
        inactive_workspace $transparent $transparent $white
        active_workspace   $transparent $transparent $white
        urgent_workspace   $red         $red         $transparent
    }


}

# left
bar {
    #i3bar position
    position top
    workspace_buttons yes
    status_command i3blocks -c ~/.i3/ri3blocks

    output $output2

    colors {
        statusline         $white
        background         $transparent

#                          BORDER       BACKGROUND   TEXT
        focused_workspace  $transparent $transparent $red
        inactive_workspace $transparent $transparent $white
        active_workspace   $transparent $transparent $white
        urgent_workspace   $red         $red         $transparent
    }



}
set $output1 VGA-0
set $output2 DVI-0
